<Window x:Class="StockManagement.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManagement.WPFClient"
        mc:Ignorable="d"
        Title="Stock Management System" Height="600" Width="900">
    <Grid>
        <TabControl>
            <TabItem Header="Products">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button Content="Load Products" Click="LoadProducts_Click" Margin="5" Padding="10"/>
                        <Button Content="Add Product" Click="AddProduct_Click" Margin="5" Padding="10"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" x:Name="ProductsGrid" AutoGenerateColumns="False" Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="120"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding CategoryId}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Categories">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button Content="Load Categories" Click="LoadCategories_Click" Margin="5" Padding="10"/>
                        <Button Content="Add Category" Click="AddCategory_Click" Margin="5" Padding="10"/>
                    </StackPanel>
                    
                    <TreeView Grid.Row="1" x:Name="CategoriesTree" Margin="10">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding SubCategories}">
                                <TextBlock Text="{Binding Name}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </TabItem>
            
            <TabItem Header="Stock Management">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <ComboBox x:Name="ProductComboBox" Width="200" Margin="5" DisplayMemberPath="Name"/>
                        <TextBox x:Name="QuantityTextBox" Width="80" Margin="5" Text="0"/>
                        <ComboBox x:Name="MovementTypeComboBox" Width="100" Margin="5" SelectedIndex="0">
                            <ComboBoxItem>IN</ComboBoxItem>
                            <ComboBoxItem>OUT</ComboBoxItem>
                        </ComboBox>
                        <TextBox x:Name="ReasonTextBox" Width="150" Margin="5" Text="Restock"/>
                        <Button Content="Add Movement" Click="AddMovement_Click" Margin="5" Padding="10"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                        <DatePicker x:Name="StartDatePicker" Width="120" Margin="5"/>
                        <DatePicker x:Name="EndDatePicker" Width="120" Margin="5"/>
                        <Button Content="Generate Report" Click="GenerateReport_Click" Margin="5" Padding="10"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="2" x:Name="ReportGrid" AutoGenerateColumns="True" Margin="10"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>